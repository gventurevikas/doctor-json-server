{
  "name": "doctor-web-server",
  "version": "1.0.0",
  "description": "TypeScript JSON Server for Doctor Website",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "watch": "nodemon --exec ts-node src/server.ts",
    "json-server": "json-server --watch data/db.json --config json-server.config.js",
    "json-server:dev": "json-server --watch data/db.json --port 3001 --host localhost",
    "start:full": "concurrently \"npm run dev\" \"npm run json-server\"",
    "install-deps": "npm install"
  },
  "keywords": ["json-server", "typescript", "api", "doctor-website"],
  "author": "Dr. Ankur Goswami",
  "license": "MIT",
  "dependencies": {
    "json-server": "^0.17.4",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "nodemon": "^3.0.0",
    "concurrently": "^8.2.0"
  }
} 